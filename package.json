{
  "name": "in-house",
  "main": "server/index.js",
  "scripts": {
    "lint": "eslint --ext .js src server/index.js",
    "dev": "cross-env MODE=dev npm run lint && npm run clean-cache && nodemon server/index.js",
    "clean-cache": "rimraf -rf ./node_modules/.cache",
    "build": "npm run clean-cache && next build ./src",
    "start": "cross-env MODE=production NODE_ENV=production node server/index.js",
    "prestart": "npm run build"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "isomorphic-unfetch": "^3.0.0",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "next": "^8.0.3",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-airbnb": "^3.2.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "1.16.4",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.j{s,sx}": [
      "eslint --fix --quiet",
      "prettier --write",
      "git add"
    ]
  }
}
